{
  "schemaVersion": 1,
  "id": "flint",
  "version": "${version}",

  "name": "Flint",
  "description": "Core library for DiamondFire mods, allowing them to share a common codebase and systems.",
  "authors": [
    "RedVortexDev",
    "zBinFinn"
  ],
  "contact": {
    "sources": "https://github.com/DFOnline/Flint",
    "issues": "https://github.com/DFOnline/Flint/issues"
  },

  "license": "LGPL-3.0",
  "icon": "assets/flint/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "dev.dfonline.flint.Flint"
    ]
  },

  "mixins": [
    "flint.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
